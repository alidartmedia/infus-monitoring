<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IoTInfusionMonitoringApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Back button color on Toolbar -->
        <item name="android:textColorSecondary">@color/green</item>

        <!-- Cursor color -->
        <item name="colorControlActivated">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
    </style>
    
    <style name="Theme.IoTInfusionMonitoringApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Back button color on Toolbar -->
        <item name="android:textColorSecondary">@color/green</item>

        <!-- Cursor color -->
        <item name="colorControlActivated">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
    </style>
</resources>